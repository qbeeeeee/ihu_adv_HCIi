<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QueryFragment">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/txtquery"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="12dp"
        android:text="Επεξήγηση Αναζήτησης"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/queryrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minWidth="60dip"
        android:minHeight="48dp"
        android:text="RUN"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/viewOnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:minWidth="72dip"
        android:minHeight="48dp"
        android:text="View on maps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/linLayBot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtqueryresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Αποτέλεσμα Αναζήτησης"
                android:textSize="12sp"
                android:textStyle="bold" />
        </ScrollView>
    </LinearLayout>


</LinearLayout>